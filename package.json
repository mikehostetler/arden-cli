{
  "name": "arden",
  "version": "0.9.0",
  "description": "A CLI tool for ArdenStats.com",
  "main": "dist/index.js",
  "type": "commonjs",
  "bin": {
    "arden": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "bunx tsx watch src/index.ts",
    "dev:bun": "bun src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/",
    "test:integration": "npm run build && bun test test/integration-simple.test.ts",
    "test:snapshots": "bun test test/output-snapshots.test.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:snapshots",
    "lint": "eslint src/ test/ scripts/",
    "lint:fix": "eslint src/ test/ scripts/ --fix",
    "format": "prettier --write src/ test/ scripts/",
    "format:check": "prettier --check src/ test/ scripts/",
    "quality": "npm run format:check && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build",
    "env-audit": "bun scripts/env-audit.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false,
    "outDir": "dist",
    "target": "node20",
    "platform": "node",
    "banner": {
      "js": "#!/usr/bin/env node\n"
    },
    "noExternal": [
      "commander",
      "chalk",
      "pino",
      "pino-pretty",
      "inquirer"
    ],
    "external": [
      "fs",
      "path",
      "os",
      "crypto",
      "events",
      "util",
      "stream",
      "buffer",
      "process",
      "child_process"
    ]
  },
  "keywords": [
    "cli",
    "arden"
  ],
  "author": "Mike Hostetler <mike.hostetler@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikehostetler/arden-cli.git"
  },
  "bugs": {
    "url": "https://github.com/mikehostetler/arden-cli/issues"
  },
  "homepage": "https://ardenstats.com",
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.1.0",
    "@types/p-map": "^2.0.0",
    "@types/phoenix": "^1.6.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "bun-types": "^1.2.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "execa": "^9.0.2",
    "msw": "^2.3.4",
    "prettier": "^3.6.2",
    "tsup": "^8.0.2",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@appsignal/javascript": "^1.6.0",
    "@types/cli-progress": "^3.11.6",
    "@types/ws": "^8.18.1",
    "boxen": "^8.0.1",
    "ccusage": "^15.5.0",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "inquirer": "^12.8.2",
    "ky": "^1.8.1",
    "open": "^10.2.0",
    "ora": "^8.2.0",
    "p-map": "^7.0.3",
    "phoenix": "^1.7.21",
    "signale": "^1.4.0",
    "ws": "^8.18.3",
    "znv": "^0.4.0",
    "zod": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
